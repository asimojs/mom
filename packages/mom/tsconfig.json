{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./lib",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "misc", "lib"]
}
